<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <com.xuexiang.xui.widget.flowlayout.FlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.xuexiang.xui.widget.button.ButtonView
            android:id="@+id/launcher"
            style="@style/ButtonView.Blue"
            android:layout_margin="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:onClick="clickViews"
            android:text="设置默认桌面" />


        <com.xuexiang.xui.widget.button.ButtonView
            android:id="@+id/start"
            style="@style/ButtonView.Blue"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@+id/launcher"
            android:onClick="clickViews"
            android:text="开始读取" />

        <com.xuexiang.xui.widget.button.ButtonView
            android:id="@+id/stop"
            style="@style/ButtonView.Blue"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@+id/launcher"
            android:onClick="clickViews"
            android:text="停止读取" />

        <com.xuexiang.xui.widget.button.ButtonView
            android:id="@+id/event"
            style="@style/ButtonView.Blue"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@+id/launcher"
            android:onClick="clickViews"
            android:text="测试event" />
    </com.xuexiang.xui.widget.flowlayout.FlowLayout>
    <com.xuexiang.xui.widget.textview.LoggerTextView
        android:layout_below="@+id/flowlayout"
        android:id="@+id/logger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5" />
</RelativeLayout>